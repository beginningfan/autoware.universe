<?xml version="1.0"?>
<launch>
  <arg name="detection_rect" default="/perception/object_recognition/detection/objects"/>
  <arg name="tracked_rect" default="/bytetrack/objects"/>
  <arg name="bytetrack_param_path" default="$(find-pkg-share bytetrack3d)/config/bytetrack3D.param.yaml"/>

  <node pkg="bytetrack3d" exec="bytetrack3d_node_exe" output="screen">
    <remap from="~/in/rect" to="$(var detection_rect)"/>
    <remap from="~/out/objects" to="$(var tracked_rect)"/>
    <remap from="~/out/objects/debug/uuid" to="$(var tracked_rect)/debug/uuid"/>
    <param from="$(var bytetrack_param_path)"/>
  </node>
</launch>
